<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Plugin.Base64Converter.MainPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Top"
            Margin="30,20,30,0"
            Spacing="10">
            <TextBlock Classes="h3" Margin="20,0,20,10">Base64 Converter</TextBlock>
            <Border
                Background="{DynamicResource SukiControlBorderBrush}"
                Height="1"
                Margin="0,-10,0,0" />
        </StackPanel>
        <SplitView
            CompactPaneLength="50"
            DisplayMode="CompactInline"
            DockPanel.Dock="Bottom"
            IsPaneOpen="False"
            Name="Base64Converter"
            OpenPaneLength="250">
            <Grid ColumnDefinitions="*, *">
                <suki:GlassCard Margin="20">
                    <DockPanel>
                        <Button
                            Classes="Flat Round"
                            CornerRadius="9"
                            DockPanel.Dock="Bottom"
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="0"
                            Name="ToBaseButton"
                            VerticalAlignment="Bottom"
                            Width="120">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16">Base64 →</TextBlock>
                            </StackPanel>
                        </Button>
                        <avaloniaEdit:TextEditor
                            FontFamily="{DynamicResource Font}"
                            Name="StringEditor"
                            ShowLineNumbers="False"
                            Watermark="String..." />
                    </DockPanel>
                </suki:GlassCard>
                <!--  <GridSplitter  -->
                <!--  Background="Transparent"  -->
                <!--  Grid.Column="2"  -->
                <!--  Grid.Row="0"  -->
                <!--  ResizeDirection="Columns" />  -->
                <suki:GlassCard
                    Grid.Column="2"
                    Grid.Row="0"
                    Margin="20">
                    <DockPanel>
                        <Button
                            Classes="Flat Round"
                            CornerRadius="9"
                            DockPanel.Dock="Bottom"
                            Height="40"
                            HorizontalAlignment="Left"
                            Margin="0"
                            Name="ToStringButton"
                            VerticalAlignment="Bottom"
                            Width="120">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16">← String</TextBlock>
                            </StackPanel>
                        </Button>
                        <avaloniaEdit:TextEditor
                            FontFamily="{DynamicResource Font}"
                            Name="Base64Editor"
                            ShowLineNumbers="False"
                            Watermark="Base64..." />
                    </DockPanel>
                </suki:GlassCard>
            </Grid>
        </SplitView>
    </DockPanel>
</UserControl>
