<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!--  Add Controls for Previewer Here  -->
        </Border>
    </Design.PreviewWith>
    <!--  Add Styles Here  -->
    <Style Selector="ListBoxItem">
        <Setter Property="Margin" Value="5,3" />
    </Style>
    <Style Selector="Button.title-bar-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Background="{TemplateBinding Background}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="7"
                    Height="24"
                    Name="bd"
                    Width="24">
                    <Path
                        Data="{TemplateBinding Content}"
                        Fill="{DynamicResource TextColor}"
                        Height="10"
                        Margin="{TemplateBinding Padding}"
                        Name="ico"
                        Stretch="Uniform"
                        Width="10" />
                </Border>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ Border">
                <Setter Property="Background" Value="{DynamicResource TitleBarHoverColor}" />
            </Style>
            <Style Selector="^.close-button /template/ Border">
                <Setter Property="Background" Value="Red" />
                <Style Selector="^ Path">
                    <Setter Property="Fill" Value="White" />
                </Style>
            </Style>
        </Style>
    </Style>
    <Style Selector="Button.custom-hover-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Background="{TemplateBinding Background}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="7"
                    Height="24"
                    Name="bd"
                    Width="24">
                    <Path
                        Data="{TemplateBinding Content}"
                        Fill="{DynamicResource TextColor}"
                        Height="20"
                        Name="ico"
                        Stretch="Uniform"
                        Width="20" />
                </Border>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ Border">
                <Setter Property="Background" Value="{DynamicResource TitleBarHoverColor}" />
            </Style>
        </Style>
    </Style>
    <Style Selector="Button.icon-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Background="{TemplateBinding Background}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{DynamicResource MainCornerRadius}"
                    Name="bd">
                    <Path
                        Data="{TemplateBinding Content}"
                        Fill="{DynamicResource TextColor}"
                        Height="10"
                        Name="ico"
                        Stretch="Uniform"
                        Width="10" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="Expander.over-expander">
        <Setter Property="Padding" Value="3,-3,0,0" />
        <Style Selector="^ /template/ Border#ExpanderContent">
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
        </Style>
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader /template/ Border#Root">
            <Setter Property="Background" Value="#00000000" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader /template/ Border#Root:pointerover">
            <Setter Property="Background" Value="{DynamicResource ExpanderHoverColor}" />
        </Style>
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader /template/ Border#ExpandCollapseChevronBorder">
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
        </Style>
        <Style Selector="^ /template/ ToggleButton#ExpanderHeader">
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Height" Value="40" />
        </Style>
    </Style>
</Styles>